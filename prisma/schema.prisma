generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Wallet {
  address String    @id
  Trading Trading[]
}

model Trading {
  uuid           String @id
  deltaRates     String
  targetRate     Float
  orderAmountMin Float
  contract       String
  walletId       String
  wallet         Wallet @relation(fields: [walletId], references: [address], onDelete: Cascade)
}

model TradingStat {
  id          String   @id
  totalValue  Float
  balanceRate Float
  baseAmount  Float
  quoteAmount Float
  marketPrice Float
  base        String
  quote       String
  createdDt   DateTime
}
